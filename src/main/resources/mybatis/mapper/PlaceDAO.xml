<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meomureum.springboot.dao.IPlaceDAO">
	<insert id="insertDAO" parameterType="com.meomureum.springboot.dto.PlaceDTO">
	    <selectKey keyProperty="p_code" resultType="string" order="BEFORE">
	        select 'P' || lpad(schedule_seq.nextval, 5, '0') FROM DUAL
	    </selectKey>
	    insert into place
	     values (#{p_code}, #{api_code}, #{p_place}, #{p_category}, #{p_lat}, #{p_lon}, #{p_addr}, #{p_tel})
	</insert>
	<select id="selectDAOByApiCode" resultType="com.meomureum.springboot.dto.PlaceDTO">
		select * from place where api_code = #{api_code}
	</select>
</mapper>