<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meomureum.springboot.dao.IReplyDAO">

    <!-- 댓글 등록 -->
    <insert id="insertReply" parameterType="com.meomureum.springboot.dto.ReplyDTO">
        INSERT INTO reply (
            re_code,
            re_content,
            created_at,
            re_secret,
            re_depth,
            b_code,
            m_code            
        ) VALUES (
            reply_seq.NEXTVAL,
            #{re_content},
            SYSDATE,
            #{re_secret},
            #{re_depth},
            #{b_code},
            #{m_code}            
        )
    </insert>

    <!-- 댓글 목록 조회 -->
    <select id="getReplies" parameterType="String" resultType="com.meomureum.springboot.dto.ReplyDTO">
        SELECT *
        FROM reply
        WHERE b_code = #{b_code}
        ORDER BY created_at ASC
    </select>

</mapper>
